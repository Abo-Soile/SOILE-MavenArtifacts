		</repository>
		<repository>
			<id>Soile Repo</id>
			<url>https://github.com/Abo-Soile/SOILE-MavenArtifacts/raw/main/</url>
		</repository>
	</repositories>

	<dependencyManagement>
		<dependencies>
			<dependency>
				<groupId>io.vertx</groupId>
				<artifactId>vertx-stack-depchain</artifactId>
				<version>${vertx.version}</version>
				<type>pom</type>
				<scope>import</scope>
			</dependency>
		</dependencies>
	</dependencyManagement>

